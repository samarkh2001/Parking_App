<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/parking_bkg"
    tools:context=".ui.profile.ProfileFragment">

    <!-- Back Button -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/lavender"
        android:text="@string/back"
        android:textSize="16sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="32dp"
            android:background="@drawable/custom_edittext">

            <!-- Welcome Message -->
            <TextView
                android:id="@+id/welcome_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to our app, User!"
                android:textSize="28sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/lavender"
                android:layout_marginBottom="24dp" />

            <!-- User Email -->
            <TextView
                android:id="@+id/user_email_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Email:"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="example@example.com"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <!-- Vehicle Number -->
            <TextView
                android:id="@+id/vehicle_number_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Number:"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/vehicle_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12345678"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <!-- Vehicle Location -->
            <TextView
                android:id="@+id/vehicle_location_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Location in Parking:"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/vehicle_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Slot A1"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <!-- Time of Parking -->
            <TextView
                android:id="@+id/parking_time_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time of Parking:"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/parking_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10:30 AM"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <!-- Payment Cost -->
            <TextView
                android:id="@+id/payment_cost_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Cost:"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/payment_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$10.00"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textColor="@color/black" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
