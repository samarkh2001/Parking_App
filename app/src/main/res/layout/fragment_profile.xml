<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/parking_bkg"
    tools:context=".ui.profile.ProfileFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="32dp"
            android:background="@drawable/custom_edittext">

            <!-- Welcome Message -->
            <TextView
                android:id="@+id/welcome_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_to_our_app_user"
                android:textSize="28sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/lavender"
                android:layout_marginBottom="24dp" />

            <!-- User Email -->
            <TextView
                android:id="@+id/user_email_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_email"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/example_example_com"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <!-- Vehicle Number -->
            <TextView
                android:id="@+id/vehicle_number_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vehicle_number1"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/vehicle_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_12345678"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <!-- Vehicle Location -->
            <TextView
                android:id="@+id/vehicle_location_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vehicle_location_in_parking"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/vehicle_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/slot_a1"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <!-- Time of Parking -->
            <TextView
                android:id="@+id/parking_time_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/time_of_parking"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/parking_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_10_30_am"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <!-- Payment Cost -->
            <TextView
                android:id="@+id/payment_cost_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/payment_cost"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/payment_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_10_00"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <!-- Logout Icon -->
            <ImageButton
                android:id="@+id/logout_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_logout"
                android:contentDescription="@string/logout" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
